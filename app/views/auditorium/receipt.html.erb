<div class="post">
	<div class="post-bgtop">
		<div class="post-bgbtm">
			<h2 class="title"><a href="#">
				借用申請明細
			</a></h2>
			<p class="meta"><span class="date">
				<% if flash[:message] %><div><%= flash[:message] %></div><% end %>
			  	<% if flash[:error] %><div><%= flash[:error] %></div><% end %>
				</p>
			<div class="navy">
				<% if @program.event_status_id == 0 %>
				[<%=link_to '編輯', :controller=>"auditorium", \
					:action=>"edit_program", :pid=>@program.pid %>]
					[<%=link_to '取消', :controller=>"auditorium", \
						:action=>"cancel", :pid=>@program.pid %>]	
				<% end %>
			</div>	
			<div class="entry">
				<fieldset>
					<legend><h3>
						處理狀態
					</h3></legend>
					<p>
					<strong>申請狀態：</strong> <%=h @program.event_status.name %>	
					</p>
					<% if @program.club_activity.club %>
					<p><strong>
						本節目為課指組活動
					</strong></p>		
					<% end %>
				</fieldset>
				<fieldset>
					<legend><h3>
						節目資訊
					</h3></legend>
					<p>
						<strong>
							節目名稱：
						</strong> <%=h @program.name %>					
					</p>
					<strong>
						節目日期：
					</strong> <%=h @program.date %>						
				</p>
					<p>
						<strong>
							觀眾人數：
						</strong> <%=h @program.date %>	
					</p>
				<fieldset>
					<legend><h3>
						借用時段
					</h3></legend>
					<p><ul>
						<% if @program.block_1 %>
						<li>早上（08:00-12:00） </li>
						<% end %>
						<% if @program.block_2 %>
						<li>下午（12:00-17:00） </li>
						<% end %>
						<% if @program.block_3 %>
						<li>晚上（17:00-22:00） </li>
						<% end %>
					</ul></p>
				</fieldset>		
				</fieldset>
				
				<fieldset>
					<legend><h3>
						聯絡資訊
					</h3></legend>
					<p>
						<strong>姓名：</strong> <%=h @program.contact.name %>	
					</p>
					<p>
						<strong>E-mail：</strong> <%=h @program.contact.email %>	
					</p>	
					<p>
						<strong>借用單位：</strong> <%=h @program.contact.unit %>	
					</p>
					<p>
						<strong>職稱：</strong> <%=h @program.contact.title %>	
					</p>
					<p>
						<strong>連絡電話：</strong><br /> <%=h @program.contact.phone %>	
					</p>
					<p>
						<strong>手機：</strong> <%=h @program.contact.mobile %>	
					</p>
					<p>
						<strong>傳真：</strong> <%=h @program.contact.fax %>	
					</p>
				
					</fieldset>
				
			</div>
			
		</div>
	</div>
</div>